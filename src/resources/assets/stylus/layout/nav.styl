
// Body class for primary visibility
body.Nav
    &--open
        .Header__option--nav .fa-caret-right
            display: none
    &--closed
        .Header__option--nav .fa-caret-left
            display: none

// Primary nev (left)
.Primary
    width: $Dimension__nav--width
    height: 100vh
    top: 0
    left: 0
    position: absolute
    &:after, &__body
        width: $Dimension__nav--width
        left: 0
        top: 0
        bottom: 0
        position: fixed
    &:after
        content: ""
        background: $Color__blue--2
    &__body
        padding-top: $Dimension__header--height
    &__overflow
        height: 100%
        overflow: auto
        -webkit-overflow-scrolling: touch;