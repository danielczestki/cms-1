/**
 * Grid layouts used across the site
 */
 
 // Even width columns up to 5
.Grid
    lost-utility: clearfix
    &--even-1 .Grid__column
        lost-column: 1
    &--even-2 .Grid__column
        lost-column: 1/2
    &--even-3 .Grid__column
        lost-column: 1/3
    &--even-4 .Grid__column
        lost-column: 1/4
    

// Uneven grids on a per project basis go below. (It's impossible to standardise uneven grids as they change per project based on the PSD.)




// 
// RESPONSIVE
//
+respond(all-devices)
    .Grid--even-4 .Grid__column
        lost-column: 1/2
        margin-bottom: 12px
        &:nth-child(3), &:nth-child(4)
            margin-bottom: 0
             
+respond(all-phones)
    .Grid--even-3 .Grid__column
        lost-column: 1
        margin-bottom: 12px
        &:last-child
            margin-bottom: 0
            
+respond(phone-portrait)
    .Grid
        .Grid__column, &--even-4 .Grid__column:nth-child(3)
            margin-bottom: 12px
        .Grid__column
            lost-column: 1
            &:last-child
                margin-bottom: 0