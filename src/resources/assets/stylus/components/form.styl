 
 // Placeholders
::-webkit-input-placeholder
    color: $Color__placeholder

:-moz-placeholder
    color: $Color__placeholder

::-moz-placeholder
    color: $Color__placeholder

:-ms-input-placeholder
    color: $Color__placeholder
    
// Remove webkits highlight
input:focus, select:focus, textarea:focus, button:focus
    outline: none
    
// Hide IE's clear cross
::-ms-clear
    display: none
    
// Global/resets
input, textarea, select
    margin: 0
    background: #fff
    font-family: $Font__base--family
    font-size: 100%
    text-align: left
textarea
    overflow: auto
.checkbox, .radio
    cursor: pointer
        
// Form Elements
.Form
    $default-height = 48px
    $small-height = 34px
    width: 100%
    display: table
    &__row
        display: table-row
        &:first-child
            .Form__field, .Form__label
                padding-top: 0
        &:last-child
            .Form__field, .Form__label
                padding-bottom: 0
                border-bottom: 0
        &--top .Form__label
            vertical-align: top
    &__label, &__field
        padding: 18px 0
        border-bottom: solid 1px $Color__grey--1
        vertical-align: middle
        display: table-cell
    &__label
        width: 25%
    &__field
        width: 75%
        padding-left: 12px
    &__input, &__select, &__textarea
        transition: border-color .2s ease-in
        width: 100%
        height: $default-height
        padding-left: 14px
        color: $Color__body--text
        border: solid 1px $Color__grey--2
        vertical-align: top
        &:focus
            border-color: $Color__orange--1 !important
        &--small
            height: $small-height
            padding-left: 10px
            font-size: 12px
    &__input, &__textarea
        padding-right: 14px
    &__textarea
        height: auto
        padding-top: 14px
        padding-bottom: 14px
    &__checkbox, .Form__input-label
        padding: 0 0 0 24px
        position: relative
        input[type=checkbox], input[type=radio]
            left: 0
            top: 3px
            position: absolute
    &__radios .Form__input-label
        margin-right: 18px
    &__checkboxes .Form__input-label
        width: 33.3333%
        margin: 0 0 6px
        padding-right: 8px
        float: left
    &__button
        height: $default-height
        &--small
            height: $small-height
            line-height: $small-height
            font-size: 14px
            padding-left: 10px
            padding-right: 10px
    &__required
        color: $Color__red--1
        font-family: "Droid Sans Mono"
        font-size: 16px
    &__info, &__error
        padding: 5px 14px
        font-size: 11px
        border: solid 1px $Color__grey--2
        text-shadow: 1px 1px 0 #fff
        display: block
        .fa 
            margin-right: 4px
    &__info
        background: $Color__grey--1
        border-top: 0
        border-radius: 0 0 6px 6px
        color: #888
        .fa
            color: $Color__blue--4
    &__error
        background: $Color__red--3
        border-bottom: 0
        border-radius: 6px 6px 0 0
        color: $Color__red--2
        font-weight: 600
        .fa
            color: $Color__red--2
    &__radios .Form__info, &__radios .Form__error, &__checkboxes .Form__info, &__checkboxes .Form__error
        border: 0
        background: none
    &__radios .Form__info, &__checkboxes .Form__info
        padding: 8px 0 0
    &__radios .Form__error, &__checkboxes .Form__error
        padding: 0 0 8px
    &__buttons
        float: left
        button 
            margin-right: 8px
    &__cancel
        float: right
    &__destroy
        padding: 44px 12px !important
        text-align: center
        font-size: 20px
        font-weight: 300
        p 
            margin-bottom: 34px
        
//
// Responsive
//
    
+respond(all-devices)
    .Form
        &__label
            width: 30%
        &__field
            width: 60%
+respond(phone-portrait)
    .Form, .Form__row, .Form__label, .Form__field
        width: auto
        display: block
    .Form
        &__label
            padding-bottom: 8px !important
            border: 0
        &__field
            padding-top: 0
            padding-left: 0