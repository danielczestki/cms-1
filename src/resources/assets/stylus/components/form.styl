    &__required
        color: $Color__red--1
        font-family: "Droid Sans Mono"
        font-size: 16px
    &__info, &__error
        padding: 5px 14px
        font-size: 11px
        border: solid 1px $Color__grey--2
        text-shadow: 1px 1px 0 #fff
        display: block
        .fa 
            margin-right: 4px
    &__info
        background: $Color__grey--1
        border-top: 0
        border-radius: 0 0 6px 6px
        color: #888
        .fa
            color: $Color__blue--4
    &__error
        background: $Color__red--3
        border-bottom: 0
        border-radius: 6px 6px 0 0
        color: $Color__red--2
        font-weight: 600
        .fa
            color: $Color__red--2
    &__radios .Form__info, &__radios .Form__error, &__checkboxes .Form__info, &__checkboxes .Form__error
        border: 0
        background: none
    &__radios .Form__info, &__checkboxes .Form__info
        padding: 8px 0 0
    &__radios .Form__error, &__checkboxes .Form__error
        padding: 0 0 8px
    &__buttons
        float: left
        button 
            margin-right: 8px
    &__cancel
        float: right
    &__destroy
        padding: 44px 12px !important
        text-align: center
        font-size: 20px
        font-weight: 300
        p 
            margin-bottom: 34px
    &__symbol
        width: $default-height
        height: $default-height
        text-align: center
        line-height: $default-height
        border: solid 1px $Color__grey--2
        background: $Color__grey--1
        .fa 
            font-size: 18px
        &--prefix
            border-right: 0
            float: left
        &--suffix
            border-left: 0
            float: right
    &--prefixed, &--suffixed
        .Form__control
            width: "calc(100% - %s)" % $default-height
.Form--prefixed.Form--suffixed
    .Form__control
        width: calc(100% - 48px - 48px)
        
//
// Responsive
//
    
+respond(all-devices)
    .Form
        &__label
            width: 30%
        &__field
            width: 60%
+respond(all-phones)
    .Form 
        &__checkboxes .Form__input-label
            width: 50%
+respond(phone-portrait)
    .Form, .Form__row, .Form__label, .Form__field
        width: auto
        display: block
    .Form
        &__label
            padding-bottom: 8px !important
            border: 0
        &__field
            padding-top: 0
            padding-left: 0
        &__input-label
            width: auto !important
            float: none !important
            display: block !important
        &__buttons, &__cancel 
            float: none
            .Button
                width: 100%
        &__buttons
            .Button 
                margin-bottom: 8px
            
            
            
            
            
            
            
            
            