 
 // Placeholders
::-webkit-input-placeholder
    color: $Color__placeholder

:-moz-placeholder
    color: $Color__placeholder

::-moz-placeholder
    color: $Color__placeholder

:-ms-input-placeholder
    color: $Color__placeholder
    
// Remove webkits highlight
input:focus, select:focus, textarea:focus, button:focus
    outline: none
    
// Hide IE's clear cross
::-ms-clear
    display: none
    
// Global/resets
input, textarea, select
    margin: 0
    background: #fff
    font-family: $Font__base--family
    font-size: 100%
    text-align: left
textarea
    overflow: auto
.checkbox, .radio
    cursor: pointer
        
// Form Elements
.Form
    $default-height = 48px
    $small-height = 34px
    width: 100%
    display: table
    &__row
        display: table-row
        &:first-child
            .Form__field, .Form__label
                padding-top: 0
        &:last-child
            .Form__field, .Form__label
                padding-bottom: 0
                border-bottom: 0
        &--top .Form__label
            vertical-align: top
    &__label, &__field
        padding: 18px 0
        border-bottom: solid 1px $Color__grey--1
        vertical-align: middle
        display: table-cell
    &__label
        width: 25%
    &__field
        width: 75%
        padding-left: 12px
    &__input, &__select, &__textarea
        transition: border-color .2s ease-in
        width: 100%
        height: $default-height
        padding-left: 14px
        color: $Color__body--text
        border: solid 1px $Color__grey--2
        vertical-align: top
        &:focus
            border-color: $Color__orange--1 !important
        &--small
            height: $small-height
            padding-left: 10px
            font-size: 12px
    &__input, &__textarea
        padding-right: 14px            
    &__textarea
        height: auto
        padding-top: 14px
        padding-bottom: 14px
    &__checkbox, .Form__input-label
        padding: 0 0 0 24px
        position: relative
        input[type=checkbox], input[type=radio]
            left: 0
            top: 3px
            position: absolute
    &__radios .Form__input-label
        margin-right: 18px
    &__checkboxes .Form__input-label
        width: 33.3333%
        margin: 0 0 6px
        padding-right: 8px
        float: left
    &__button
        height: $default-height
        &--small
            height: $small-height
            line-height: $small-height
            font-size: 14px
            padding-left: 10px
            padding-right: 10px
    &__file 
        position: relative
        &-placeholder, &-preview
            height: 60px
        &-button 
            width: 125px
            float: left 
        &-placeholder 
            width: calc(100% - 125px - 70px)
            padding-left: 12px
            line-height: 65px
            cursor: pointer
            float: left 
            &--empty
                color: $Color__grey--3
        &-preview
            width: 60px
            height: 60px
            text-align: center
            background-color: #f1f1f1
            background-repeat: no-repeat
            background-position: 50% 50%
            background-size: cover
            top: 0
            right: 0
            position: absolute
            z-index: 1
            &:before
                content: "preview"
                width: 100%
                padding: 1px 0
                font-size: 8px 
                text-align: center
                background: rgba($Color__grey--4, .8)
                left: 0
                bottom: 0
                position: absolute
        &-spinner
            margin-top: 20px
            color: $Color__grey--3
        &-clear 
            transition: color .2s
            color: $Color__grey--4
            font-size: 12px
            right: -6px
            top: -12px
            position: relative
            cursor: pointer
            &:hover
                color: $Color__red--1
