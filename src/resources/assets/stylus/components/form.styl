 
 // Placeholders
::-webkit-input-placeholder
    color: $Color__placeholder

:-moz-placeholder
    color: $Color__placeholder

::-moz-placeholder
    color: $Color__placeholder

:-ms-input-placeholder
    color: $Color__placeholder
    
// Remove webkits highlight
input:focus, select:focus, textarea:focus, button:focus
    outline: none
    
// Hide IE's clear cross
::-ms-clear
    display: none
    
// Global/resets
input, textarea, select
    margin: 0
    background: #fff
    font-family: $Font__base--family
    font-size: 100%
    text-align: left
textarea
    overflow: auto
.checkbox, .radio
    cursor: pointer
        
// Form Elements
.Form
    $default-height = 48px
    $small-height = 34px
    &__input, &__select
        transition: border-color .2s ease-in
        width: 100%
        height: $default-height
        padding-left: 14px
        color: $Color__body--text
        border: solid 1px $Color__grey--2
        vertical-align: top
        &:focus
            border-color: $Color__orange--1 !important
        &--small
            height: $small-height
            padding-left: 10px
            font-size: 12px
    &__input
        padding-right: 14px
    &__checkbox
        padding: 0 0 0 24px
        position: relative
        input[type=checkbox]
            left: 0
            top: 3px
            position: absolute
    &__button
        height: $default-height
        &--small
            height: $small-height
            line-height: $small-height
            font-size: 14px
            padding-left: 10px
            padding-right: 10px