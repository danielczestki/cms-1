{
    "name": "thinmartian/cms",
    "description": "Thin Martian CMS platform built on the Laravel PHP Framework",
    "keywords": ["laravel", "cms", "content management"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Thin Martian",
            "email": "hello@thinmartian.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "illuminate/support": "^5.2",
        "laravelcollective/html": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Thinmartian\\Cms\\": "src/"
        },
        "files": [
            "src/app/Support/helpers.php"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "php artisan vendor:publish --tag=assets --force"
        ]
    }
}
