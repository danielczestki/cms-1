{
    "name": "thinmartian/cms",
    "description": "Thin Martian CMS platform built on the Laravel PHP Framework",
    "keywords": ["laravel", "cms", "content management"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Thin Martian",
            "email": "hello@thinmartian.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "illuminate/support": "^5.2",
        "laravelcollective/html": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Thinmartian\\Cms\\App\\": "packages/thinmartian/cms/src/app",
            "Thinmartian\\Cms\\": "packages/thinmartian/cms/src"
        },
        "files": [
            "src/app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "classmap": ["tests/TestCase.php"]   
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "illuminate/database": "^5.2",
        "illuminate/cache": "^5.2"
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan vendor:publish --provider='Thinmartian\\Cms\\CmsServiceProvider'"            
        ],
        "post-update-cmd": [
            "php artisan vendor:publish --provider='Thinmartian\\Cms\\CmsServiceProvider' --tag=assets --force"
        ]
    },
}
