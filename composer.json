{
    "name": "thinmartian/cms",
    "description": "Thin Martian CMS platform built on the Laravel PHP Framework",
    "keywords": ["laravel", "cms", "content management"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Thin Martian",
            "email": "hello@thinmartian.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "laravel/framework": "^5.2",
        "laravelcollective/html": "^5.2",
        "symfony/filesystem": "^3.1",
        "intervention/image": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "illuminate/database": "^5.2",
        "illuminate/cache": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Thinmartian\\Cms\\App\\": "src/app",
            "Thinmartian\\Cms\\": "src"
        },
        "files": [
            "src/app/Support/helpers.php"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "php artisan cms:build --system"
        ]
    }
}
